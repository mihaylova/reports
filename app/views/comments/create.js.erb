<% if @comment.new_record? %>
  $('#comment_text').effect('highlight', { color: 'red' });
  $(".comment-form .error").html("Your comment wasn't saved!!");
<% else %>
  $('div#comments').append("<%= escape_javascript(render @comment) %>");
  $('#comment_text').val("");
  $("#add_comment").removeClass("invisible")
  $('#new-comment').addClass("invisible")
<% end %>
